{
    "swagger": "2.0",
    "info": {
        "version": "1.0.0",
        "title": "Fundoo Notes",
        "description": "APIs"
    },
    "host": "localhost:3000",
    "basePath": "/",
    "tags": [
        {
            "name": "User",
            "description": "API for User"
        },
        {
            "name": "Notes",
            "description": "API for notes"
        }
    ],
    "schemes": [
        "http"
    ],
    "consumes": [
        "application/json"
    ],
    "produces": [
        "application/json"
    ],
    "paths": {
        "/registration": {
            "post": {
                "tags": [
                    "User"
                ],
                "summary": "User registration",
                "parameters": [
                    {
                        "name": "registration",
                        "in": "body",
                        "description": "User registration",
                        "schema": {
                            "$ref": "#/definitions/registration"
                        }
                    }
                ],
                "produces": [
                    "application/json"
                ],
                "responses": {
                    "200": {
                        "description": "Registration is done successfully",
                        "schema": {
                            "$ref": "#/definitions/registration"
                        }
                    }
                }
            }
        },
        "/login": {
            "post": {
                "tags": [
                    "User"
                ],
                "summary": "User login",
                "parameters": [
                    {
                        "name": "user login",
                        "in": "body",
                        "description": "User login",
                        "schema": {
                            "$ref": "#/definitions/login"
                        }
                    }
                ],
                "produces": [
                    "application/json"
                ],
                "responses": {
                    "200": {
                        "description": "Successfuuly logged in !",
                        "schema": {
                            "$ref": "#/definitions/login"
                        }
                    }
                }
            }
        },
        "/forgot-password": {
            "post": {
                "summary": "Recieve reset password link via email",
                "tags": [
                    "User"
                ],
                "parameters": [
                    {
                        "name": "User",
                        "in": "body",
                        "description": "Recieve reset password link via email",
                        "schema": {
                            "$ref": "#/definitions/forgotPassword"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Email has been sent",
                        "schema": {
                            "$ref": "#/definitions/forgotPassword"
                        }
                    }
                }
            }
        },
        "/reset-password": {
            "put": {
                "summary": "Change password",
                "tags": [
                    "User"
                ],
                "parameters": [
                    {
                        "name": "token",
                        "in": "header",
                        "description": "token"
                    },
                    {
                        "name": "newPassword",
                        "in": "body",
                        "description": "User with new password",
                        "schema": {
                            "$ref": "#/definitions/resetPassword"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Password has been changed !",
                        "schema": {
                            "$ref": "#/definitions/resetPassword"
                        }
                    }
                }
            }
        },
        "/notes": {
            "get": {
                "tags": [
                    "Notes"
                ],
                "summary": "Retrieve all the notes",
                "responses": {
                    "200": {
                        "description": "Ok",
                        "schema": {
                            "$ref": "#/definitions/notes"
                        }
                    }
                }
            },
            "post": {
                "tags": [
                    "Notes"
                ],
                "summary": "Create new note",
                "parameters": [
                    {
                        "name": "note",
                        "in": "body",
                        "description": "Create new note",
                        "schema": {
                            "$ref": "#/definitions/note"
                        }
                    }
                ],
                "produces": [
                    "application/json"
                ],
                "responses": {
                    "200": {
                        "description": "created new note",
                        "schema": {
                            "$ref": "#/definitions/note"
                        }
                    }
                }
            }
        },
        "/notes/{id}": {
            "parameters": [
                {
                    "name": "id",
                    "in": "path",
                    "required": true,
                    "description": "ID of the note that is to be updated or deleted",
                    "type": "string"
                }
            ],
            "delete": {
                "tags": [
                    "Notes"
                ],
                "summary": "Delete note with given ID",
                "parameters": [
                    {
                        "name": "note",
                        "in": "body",
                        "description": "Delete note of user",
                        "schema": {
                            "$ref": "#/definitions/deleteNote"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Note deleted",
                        "schema": {
                            "$ref": "#/definitions/note"
                        }
                    }
                }
            },
            "put": {
                "tags": [
                    "Notes"
                ],
                "summary": "Update note with given ID",
                "parameters": [
                    {
                        "name": "note",
                        "in": "body",
                        "description": "Note with new data",
                        "schema": {
                            "$ref": "#/definitions/updateNote"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Note is updated",
                        "schema": {
                            "$ref": "#/definitions/note"
                        }
                    }
                }
            }
        }
    },
    "definitions": {
        "registration": {
            "required": [
                "firstName",
                "lastName",
                "emailId",
                "password"
            ],
            "properties": {
                "firstName": {
                    "type": "string"
                },
                "lastName": {
                    "type": "string"
                },
                "emailId": {
                    "type": "string"
                },
                "password": {
                    "type": "string"
                }
            }
        },
        "login": {
            "required": [
                "emailId",
                "password"
            ],
            "properties": {
                "emailId": {
                    "type": "string"
                },
                "password": {
                    "type": "string"
                }
            }
        },
        "forgotPassword": {
            "required": [
                "emailId"
            ],
            "properties": {
                "emailId": {
                    "type": "string"
                }
            }
        },
        "resetPassword": {
            "required": [
                "token",
                "newPassword"
            ],
            "properties": {
                "newPassword": {
                    "in": "body",
                    "type": "string"
                }
            }
        },
        "note": {
            "required": [
                "title",
                "description"
            ],
            "properties": {
                "emailId": {
                    "type": "string"
                },
                "title": {
                    "in": "body",
                    "type": "string"
                },
                "description": {
                    "in": "body",
                    "type": "string"
                }
            }
        },
        "notes": {
            "type": "array",
            "$ref": "#/definitions/note"
        },
        "updateNote": {
            "required": [
                "title",
                "description"
            ],
            "properties": {
                "emailId": {
                    "type": "string"
                },
                "title": {
                    "type": "string"
                },
                "description": {
                    "type": "string"
                }
            }
        },
        "deleteNote": {
            "properties": {
                "emailId": {
                    "type": "string"
                }
            }
        }
    }
}